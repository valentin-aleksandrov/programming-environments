        <TextBox x:Name="powerInput" HorizontalAlignment="Left" Height="32" Margin="228,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="44" FontSize="24" FontFamily="Arial"/>
        <Button Content="Power" HorizontalAlignment="Left" Margin="406,114,0,0" VerticalAlignment="Top" Width="101" FontSize="24" FontFamily="Arial" Click="Button_Click_3"/>
